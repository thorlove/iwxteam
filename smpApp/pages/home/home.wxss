/**index.wxss**/

.serarch-content {
  background-color: white;
  opacity: 0.5;
  width: 650rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 70rpx;
  margin: auto;
  border-radius: 5px 5px;
}

.search-view {
  width: 100%;
  height: 100rpx;
  background: #554d94;
  display: flex;
}

.search-input {
  width: 500rpx;
  font-size: 13pt;
  background-color: white;
  opacity: 0.5;
}

.tody-view {
  display: flex;
  justify-content: space-around;
  background: #fff;
  align-items: center;
}

.today-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fun-view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.fun-gird {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.fun-fahuo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.fun-opt {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.ad-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  height: 120rpx;
}
